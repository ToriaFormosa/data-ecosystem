section.team-section.team-section--advisors
  .team-section__container.container
    header.team-section__header 
      +title('Advisors', 'h2', 'e-team__title')
      
    
    .team-section__list.swiper-container.__js_advisors-carousel
      .swiper-wrapper 
        - let j = 0;
        while j <= 2

          .team-section__item(class="member-card member-card--theme-citrus member-card--bg-" + (j + 1) + " swiper-slide ")
            .member-card__image
              img(src="images/page-5/member-image.png", srcset="images/page-5/member-image@2x.png 2x", width="188", height="188", alt="")
            h3.member-card__name Curtis Stone
            .member-card__country Malaysia
            .member-card__social 
              each item in ['tw-clear', 'fb-clear', 'insta-clear']
                a(href="#")
                  +icon(item)(width="20", height="20")
          - j++;

      .swiper-navigation
        button.swiper-button-prev(type="button")
          +icon('long-right-arrow')(width="143", height="9")
        button.swiper-button-next(type="button")
          +icon('long-right-arrow')(width="143", height="9")